<h2>Change your password</h2>

<div class="devise-form">

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, validate: true) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, as: :icon_password_field, input_html: { icon: "vpn_key" } %>
      <%= f.input :password_confirmation, as: :icon_password_field, input_html: { icon: "vpn_key" } %>
    </div>

    <div class="form-actions">
      <%= f.button :button, "Change my password" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

