<%= grid(@users_grid) do |g|
  g.column name: t('.columns.name'), attribute: 'name'
  g.column name: t('.columns.email'), attribute: 'email'
  g.column name: t('.columns.last_signed_in'), attribute: 'last_sign_in_at'

  g.column   do |user|
    link_to(t('actions.view'), user_path(user)) + " | " +
      link_to(t('actions.edit'), edit_user_path(user)) + " | " +
      link_to(t('actions.delete'), user_path(user), method: :delete, data: { confirm: t('actions.confirm') })
  end
end -%>

