= content_for :title, t('.title')

.row
  - if policy(Integral::Page).manager?
    .col.s12.m6.l4
      .integral-card
        = link_to pages_path do
          .card-image.orange.lighten-4
            = image_tag image_url('pages.png')
            %span.card-title Pages
        .card-content
          %p Add, edit and remove pages.
        .card-action
          = link_to t('actions.view'), pages_path

  - if policy(current_user).manager?
    .col.s12.m6.l4
      .integral-card
        = link_to users_path do
          .card-image.blue.lighten-2
            = image_tag image_url('users.png')
            %span.card-title Users
        .card-content
          %p Add, edit and remove users.
        .card-action
          = link_to t('actions.view'), users_path

  - if policy(Integral::Image).manager?
    .col.s12.m6.l4
      .integral-card
        = link_to img_index_path do
          .card-image.blue.lighten-2
            = image_tag image_url('images.png')
            %span.card-title Images
        .card-content
          %p Add, edit and remove images.
        .card-action
          = link_to t('actions.view'), img_index_path

  .col.s12.m6.l4
    .integral-card
      = link_to user_path(current_user) do
        .card-image.teal.lighten-2
          = image_tag image_url('user.png')
          %span.card-title Account & Profile
      .card-content
        %p View + edit your profile.
      .card-action
        = link_to t('actions.view'), user_path(current_user)

