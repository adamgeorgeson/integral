.modal.record-selector.modal-fixed-footer{ data: { record_selector_path: search_path, record_selector_name: name }}
  .modal-header
    %i.material-icons.modal-close.close-btn close
    %h4= title
  .modal-content
    = form_tag search_path, method: :get, remote: true, format: :json , data: {'type' => 'json'} do
      .row
        %i.material-icons search
        = text_field_tag :search, '', class: 'search-field', placeholder: 'Search'
        = hidden_field_tag :page, '', class: 'page-field', value: 1
        = submit_tag 'Search', class: 'btn search-button'
    .progress
      .indeterminate

    .records

  .modal-footer
    %span.selected
    = link_to 'Ok', '#', class: 'btn close-button disabled'

