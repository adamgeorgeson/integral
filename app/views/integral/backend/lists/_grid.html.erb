<%= grid(@lists_grid) do |g|
  g.column name: t('.columns.title'), attribute: 'title'
  g.column name: t('.columns.description'), attribute: 'description'

  g.column do |list|
    # link_to("<span class='material-icons green-text text-lighten-1'>remove_red_eye</span>".html_safe, page_path(page)) +
      link_to("<span class='material-icons blue-text text-lighten-1'>edit</span>".html_safe, backend_list_path(list)) +
      link_to("<span class='material-icons red-text text-lighten-1'>delete</span>".html_safe, backend_list_path(list), method: :delete, data: { confirm: t('integral.actions.confirm') })
  end

  g.blank_slate  do
    "<div><br />#{t('integral.backend.lists.index.non_available')}</div>"
  end
end -%>

