= content_for :title, t('.title', title: @menu.title)

.row.menus-container
  .col.s12
    = simple_form_for @menu do |f|
      .card-panel
        .overview
          %h2.center.title.input-display
            = @menu.title
            - unless @menu.locked?
              %i.material-icons edit
          = f.input :title, placeholder: t('integral.placeholders.title'), label: false, wrapper_html: { class: 'hide' }
          %p.center.description.input-display
            = @menu.description
            - unless @menu.locked?
              %i.material-icons edit
            = f.input :description, placeholder: t('integral.placeholders.description'), as: :string, label: false, wrapper_html: { class: 'hide' }

        #menu-items.sortable
          = link_to_add_association f, :menu_items, 'data-association-insertion-method' => 'after', id: 'top-add-menu-button', 'data-association-insertion-node' => '#top-add-menu-button' do
            .add-menu-item
              %i.material-icons add
          = f.simple_fields_for :menu_items do |menu_item|
            = render 'menu_item_fields', f: menu_item
      = f.button :button
      -# = link_to 'Cancel', '#', class: 'btn grey text-white lighten-1 cancel-form'
