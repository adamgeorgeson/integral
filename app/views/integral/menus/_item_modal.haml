.modal.menu-item-modal.modal-fixed-footer{id: "menu-item-modal-#{f.object.id}"}
  .modal-content
    %h4.center Edit List Item

    = f.input :type, input_html: { class: 'object-field'} do
      - f.select :type, Integral::MenuItem.types_collection, { include_blank: false, prompt: t('integral.prompts.select_type') }, { class: 'object-field' }
    = f.input :object_type, as: :hidden, input_html: { class: 'object-type-field' }
    = f.input :object_id, prompt: 'Select Post..', collection: Integral::Post.all, include_blank: false, wrapper_html: { class: 'hide object-wrapper' }
    = f.input :title, input_html: { class: 'title-field' }
    .link-wrapper{ class: f.object.basic? ? 'hide' : '' }
      = f.input :url, input_html: { class: 'url-field' }
      = f.input :target, as: :boolean, checked_value: '_blank', unchecked_value: '_self', input_html: { class: 'target-field' }
    = f.input :description, as: :string
    = f.input :html_classes

    = f.association :image, prompt: t('integral.prompts.select_image'), collection: Integral::Image.all.order(:title)
    = f.input :priority, as: :hidden, input_html: { class: 'priority-field' }

  .modal-footer
    = link_to 'Ok', '#', class: 'btn confirm-btn'
    = link_to_remove_association 'Remove', f, class: 'btn red lighten-1 modal-close', wrapper_class: 'menu-item-container'

