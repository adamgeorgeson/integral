task_group :analysis do
  yard 'stats --list-undoc', :coverage => 100
  task :cane, :max_width => 250
  task :flay, :exclude => '^\.\/(db|factories|spec|vendor)\/', :max => 145
  task :flog, :methods => true, :exclude => '^\.\/(db|factories|spec|vendor|config)\/', :average => 7.9, :max => 272.6
  task :brakeman, '--table-width 1500'
end

build :default do
  task_group :analysis
  rspec '--profile --order rand', :coverage => 100
end
